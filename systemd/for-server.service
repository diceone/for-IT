[Unit]
Description=For Automation Framework Server
After=network.target
Documentation=https://github.com/diceone/for-IT

[Service]
Type=simple
User=for
Group=for
ExecStart=/usr/local/bin/for-server --addr :8080 --playbook-dir /etc/for/playbooks
Restart=always
RestartSec=10
WorkingDirectory=/etc/for

# Security settings
NoNewPrivileges=yes
ProtectSystem=full
ProtectHome=read-only
PrivateTmp=yes
PrivateDevices=yes
SystemCallArchitectures=native

[Install]
WantedBy=multi-user.target
